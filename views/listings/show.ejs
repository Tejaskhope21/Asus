<% layout('layouts/boilerplate.ejs') %>

<div class="row">
    <div class="col-8 offset-2 ">
    <h3>Listing Details:</h3>
    </div>
    <div class="card col-6 offset-2">
        <img src="<%= listing.image.url %>" class="card-img-top show-image" alt="listing_image">
        <div class="card-body">
            <p class="card-text">
              <b> <%= listing.title %> </b> <br>
               <%= listing.description %> <br>
                &#8377; <%= listing.price.toLocaleString("en-IN") %>  <br>
                <%= listing.location %> <br>
               <%= listing.contry %> <br>
            </p>
        </div>
    </div>

 <br>

 
 <form method="get" action="listings/new">
    <button>crete new Listing</button>
</form>

<div class="btns">
    <a href="/listings/<%= listing._id %> /edit" class="btn btn-dark col-1 offset-2">Edit </a>

<form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-dark ">Delete This</button>
</form>
</div>
</div>


 
